---
interface Props {
    title: string,
    icon: string,
    color: string
}
const { title, icon, color } = Astro.props;
---

<article class="bg-white rounded-4 d-flex justify align-items-center gap-3 py-3 ps-3 pe-5 shadow-sm">
    <section class={`bg-${color} bg-opacity-25 rounded-3 text-${color} d-flex justify-content-center align-items-center`} style="height: 45px; width: 45px;">
        <i class={`bi ${icon}`}></i>
    </section>
    <h3 class="m-0 fs-4">{title}</h3>
</article>